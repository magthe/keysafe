def build(bld):
    bld(
            features='subst',
            source='__init__.py.in',
            target='__init__.py',
            dict={
                'KEYSAFE_PY_PATH' : bld.env.KEYSAFE_PY_PATH,
                'KEYSAFE_GLADE_PATH' : bld.env.KEYSAFE_GLADE_PATH,
                'KEYSAFE_BIN_PATH' : bld.env.KEYSAFE_BIN_PATH,
                },
            )

    bld(
            features='py',
            source=bld.path.ant_glob('*.py') + ' __init__.py',
            )

